{
  "settings": {
    "index.number_of_shards": {{number_of_shards | default(5)}},
    "index.number_of_replicas": {{number_of_replicas | default(0)}},
    "index.requests.cache.enable": false
  },
  "mappings": {
    "_source": {
      "enabled": {{ source_enabled | default(true) | tojson }}
    },
    "dynamic": "false",
    "properties": {
      "additional_data": {
        "type": "text",
        "analyzer": "standard",
        "norms": false
      },
      "caller": {
        "type": "keyword"
      },
      "common_booking_code": {
        "type": "keyword"
      },
      "common_client": {
        "type": "keyword"
      },
      "common_client_ip": {
        "type": "keyword"
      },
      "common_client_username": {
        "type": "keyword"
      },
      "common_endpoint": {
        "type": "keyword"
      },
      "common_endpoint_elapsed": {
        "type": "long"
      },
      "common_error": {
        "type": "text",
        "analyzer": "standard",
        "norms": false
      },
      "common_error_type": {
        "type": "keyword"
      },
      "caller": {
        "type": "keyword"
      },
    }
  }
}
